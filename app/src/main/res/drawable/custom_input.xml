<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- when inputText is focused -->
    <item
        android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/White_01"/>
            <corners android:radius="14dp"/>
            <stroke android:color="@color/Green_02_Dark"
                android:width="2dp"/>
        </shape>
    </item>

    <!-- when inputText is NOT focused -->
    <item
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/White_pure"/>
            <corners android:radius="14dp"/>
            <stroke android:color="@color/Green_01_Light"
                android:width="1dp"/>
        </shape>
    </item>



</selector>